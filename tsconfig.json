{
  	"compilerOptions": {
		"module": "commonjs",
		"moduleResolution": "node",
		"declaration": true,
		"removeComments": true,
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"allowSyntheticDefaultImports": true,
		"target": "ES6",
		"sourceMap": true,
		"outDir": "dist",
		"baseUrl": ".",
		"incremental": true,
		"skipLibCheck": true,
		"esModuleInterop": false,
		"strictNullChecks": false,
		"noUnusedLocals": false,
		"noImplicitAny": false,
		"strictBindCallApply": false,
		"forceConsistentCasingInFileNames": false,
		"noFallthroughCasesInSwitch": false,
		"resolveJsonModule": true,
		"noLib": false,
		"useUnknownInCatchVariables": false,
		"noImplicitThis": true,
		"useDefineForClassFields": true,
		"allowJs": false,
		"lib": ["esnext", "dom"],
		"types": ["node"],
		"paths": {
			"@": ["editor/src"],
			"@/*": ["editor/src/*"],
			"@ucsjs/common": ["packages/common"],
			"@ucsjs/common/*": ["packages/common/*"],
			"@ucsjs/core": ["packages/core"],
			"@ucsjs/core/*": ["packages/core/*"],
			"@ucsjs/blueprints": ["packages/blueprints"],
			"@ucsjs/blueprints/*": ["packages/blueprints/*"],
			"@ucsjs/repository": ["packages/repository"],
			"@ucsjs/repository/*": ["packages/repository/*"],
			"@ucsjs/protobuf": ["packages/protobuf"],
			"@ucsjs/protobuf/*": ["packages/protobuf/*"],
			"@ucsjs/editor": ["packages/editor"],
			"@ucsjs/editor/*": ["packages/editor/*"],
			"@ucsjs/uibuilder": ["packages/uibuilder"],
			"@ucsjs/uibuilder/*": ["packages/uibuilder/*"],
			"@abstracts": ["src/abstracts"],
			"@abstract/*": ["src/abstracts/*"],
			"@blueprints": ["src/blueprints"],
			"@blueprint/*": ["src/blueprints/*"],
			"@controllers": ["src/controllers"],
			"@controller/*": ["src/controllers/*"],
			"@core": ["src/core"],
			"@core/*": ["src/core/*"],
			"@decorators": ["src/decorators"],
			"@decorator/*": ["src/decorators/*"],
			"@dtos": ["src/dto"],
			"@dto/*": ["src/dto/*"],
			"@enums": ["src/enums"],
			"@enum/*": ["src/enums/*"],
			"@interfaces": ["src/interfaces"],
			"@interface/*": ["src/interfaces/*"],
			"@modules": ["src/modules"],
			"@module/*": ["src/modules/*"],
			"@services": ["src/services"],
			"@service/*": ["src/services/*"]
		},
	},
	"include": ["packages/**/*", "samples/**/*", "src/**/*.ts", "integration/**/*"],
	"exclude": ["node_modules", "editor", "dist", "**/*.spec.ts"]
}
